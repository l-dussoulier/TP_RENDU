<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<display-name>TP_RENDU</display-name>
	
	<servlet>
	  <servlet-name>ArticleServlet</servlet-name>
	  <servlet-class>fr.epsi.controller.ArticleServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	   <servlet-name>ArticleServlet</servlet-name>
	   <url-pattern>/article/create</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>fr.epsi.controller.HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	   <servlet-name>HomeServlet</servlet-name>
	   <url-pattern>/home</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ClientServlet</servlet-name>
		<servlet-class>fr.epsi.controller.ClientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ClientServlet</servlet-name>
		<url-pattern>/client/create</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ListeClientServlet</servlet-name>
		<servlet-class>fr.epsi.controller.ListeClientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListeClientServlet</servlet-name>
		<url-pattern>/client/ListeClient</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ListeArticleServlet</servlet-name>
		<servlet-class>fr.epsi.controller.ListeArticlesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListeArticleServlet</servlet-name>
		<url-pattern>/article/ListeArticles</url-pattern>
	</servlet-mapping>
	
	
</web-app>
